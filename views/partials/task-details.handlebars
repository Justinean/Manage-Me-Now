{{!-- assigned to --}}
<div class="my-1 rounded list-group-item container">
  <div class="row">
    <h3 class="text-start col-10 my-3">Assigned to {{task_user}}</h3>
    {{#if @root.isMgr}}
    <div class="col-2 px-1 text-end">
      {{#if @root.projectPage}}
      <i class="mt-3 fa-1x btn fas fa-trash-alt" id="deleteTaskTrash" data-id="{{id}}"></i>
      {{/if}}
    </div>
    {{/if}}
    <hr>
    {{!-- task name --}}
    <div class="text-start">{{name}}</div>
  </div>
</div>