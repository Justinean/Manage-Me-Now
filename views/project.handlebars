<section class="m-4">
  <div>
    <h3>All Projects</h3>
    <div class="mt-1 d-flex flex-row flex-wrap justify-content-center">
    {{#if projects.length}}
    {{#each projects as |project|}}
    {{> project-list}}
    {{/each}}
    {{else}}
    <p>You have no current projects.</p>
    {{/if}}
    </div>
  </div>

  <p>Current project:
  <h3>{{currentProject.name}}</h3>
  </p>

  {{#if isMgr}}
  <div>
    <a class="d-inline-block my-3 mx-4 btn bg-primary text-white" data-id="{{currentProject.id}}" id="deleteProjectBtn" href="/dashboard/newProject">Delete Project</a>
  </div>
  {{/if}}

  <h3>Project Employees</h3>
  {{!-- display this btn inline with heading --}}
  <a href="/project/addEmployee/{{currentProject.id}}"><button>Add New Employee</button></a>
  {{!-- all employees on project --}}
  {{#if addEmployee}}
  <form id="newEmployeeForm" class="p-2 bg-light border border-dark rounded">
    {{#each allEmployees as |allEmployee|}}
    {{> employees-to-add}}
    {{/each}}
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  {{/if}}

  {{#each employees as |employee|}}
  {{> employee-list}}
  {{/each}}



  <div>
    <h3>Project Tasks</h3>
    {{#if isMgr}}
    {{!-- change not link button  --}}
    <a href="/project/newTask{{currentProject.id}}"><button>Add New Task</button></a>
    {{/if}}

    {{#if newTask}}
    <form id="newTaskForm" class="p-2 bg-light border border-dark rounded">
      <div class="mb-3 mt-3 mx-3">
        <label for="newTask" class="form-label">Task</label>
        <input class="form-control" id="newTaskInput" placeholder="Enter new task">
      </div>
      <div class="mb-3 mx-3">
        {{#each allEmployees as |allEmployee|}}
        {{> employees-to-add}}
        {{/each}}
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    {{/if}}

    {{#if tasks.length}}
    {{#each tasks as |task|}}
    {{> task-details}}
    {{/each}}
    {{else}}
    <p>There are no current tasks.</p>
    {{/if}}
  </div>
</section>


<script src="/js/deleteProject.js"></script>
<script src="/js/addEmployee.js"></script>
