  <section>
  <h2>{{username}}'s Dashboard</h2>
  <h3><a class="icon" href="mailto:{{email}}"><i class="far fa-envelope"></i>{{email}}</a></h3>
  <div>
    <h3>Current Projects</h3>

  
    <div>
      
       
    {{#if projects.length}}
    {{#each projects as |project|}}
    {{> project-list}}
    {{/each}}
    {{else}}
    <p>You have no current projects.</p>
    {{/if}}
       
    {{#if isMgr}}
  <div>
    <a href="/dashboard/newProject">Add New Project</a>
  </div>
  {{/if}}
    </div>

  </div>
  <div>
    <h3>Current Tasks</h3>
    {{#if tasks.length}}
    {{#each tasks as |task|}}
    {{> task-details}}
    {{/each}}
    {{else}}
    <p>You have no current tasks.</p>
    {{/if}}
  </div>
  
</section>